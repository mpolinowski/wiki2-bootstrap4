    <div id="wrapper">

        <header><% include ../../_partials/template/_header.ejs %></header>
        <!-- Navbar-->

            <div class="container mb">
                <h1>1080p CGI Commands - Set Alarm Server Attribute</h1>
                <hr>
            </div>

            <div class="clearfix"></div>

            <div class="container main">

              <!-- ######################################## Body ####################################### -->

              <section class="row" style="margin-top: 15px;">
                <!-- Media Container -->

                <div class="col-xs-12">

                  <h2>Alarm :: Set Alarm Server Attribute</h2>
                  <h3>param.cgi?cmd=setalarmserverattr</h3>

                  <div class="table-responsive">
                    <table class="table table-hover">
                      <tr>
                        <th>Function</th>
                        <td>Set a HTTP GET Command to be send to the Alarmserver in case of an alert</td>
                      </tr>
                      <tr>
                        <th>Authority</th>
                        <td>admin</td>
                      </tr>
                      <tr>
                        <th>Syntax</th>
                        <td><code>/cgi-bin/hi3510/param.cgi[?cmd=setalarmserverattr&amp;-as_server=&amp;-as_port=&amp;-as_username=&amp;-as_password=]</code></td>
                      </tr>
                      <tr>
                        <th rowspan="4">Parameter</th>
                        <td>as_server: Alarm Server Address</td>
                      </tr>
                      <tr>
                        <td>as_port: Server port(1-65535)</td>
                      </tr>
                      <tr>
                        <td>as_username: User Name</td>
                      </tr>
                      <tr>
                        <td>as_password: Password</td>
                      </tr>
                      <tr>
                        <th>Return</th>
                        <td>Success, Error</td>
                      </tr>
                      <tr>
                        <th>Example</th>
                        <td><code>http://admin:instar@192.168.178.88/cgi-bin/hi3510/param.cgi?cmd=setalarmserverattr&-as_server=alarm.net&-as_port=8990&amp;-as_username=asdf&amp;-as_password=1234</code></td>
                      </tr>
                    </table>
                  </div>

                </div>

