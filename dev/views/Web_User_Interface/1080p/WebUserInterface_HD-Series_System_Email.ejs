            <div class="container main">



                  <% include ../../_partials/content/_bluenav-1080p-webUI.ejs %>

                <article>
                    <!-- article -->

                    <div class="margin">
                        <h2 class="post-title">Geben Sie Empfänger Adressen für die E-Mails ein</h2>
                    </div>
