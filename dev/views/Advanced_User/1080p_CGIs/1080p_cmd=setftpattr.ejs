        <!-- #############################################  Body ############################################# -->

            <div class="container main">

              <section class="row" style="margin-top: 15px;">
                <!-- Media Container -->

                <div class="col-xs-12">

                  <h2>FTP :: Set FTP Attribute</h2>
                  <h3>param.cgi?cmd=setftpattr</h3>

                  <div class="table-responsive">
                    <table class="table table-hover">
                      <tr>
                        <th>Function</th>
                        <td>Set FTP Parameter</td>
                      </tr>
                      <tr>
                        <th>Authority</th>
                        <td>admin</td>
                      </tr>
                      <tr>
                        <th>Syntax</th>
                        <td><code>/cgi-bin/hi3510/param.cgi[?cmd=setftpattr&amp;-ft_server=&amp;-ft_port=&amp;-ft_username=&amp;-ft_password=&amp;-ft_dirname=&amp;-ft_mode=]</code></td>
                      </tr>
                      <tr>
                        <th rowspan="6">Parameter</th>
                        <td>ft_server: FTP Server Address</td>
                      </tr>
                      <tr>
                        <td>ft_port: FTP Server Port</td>
                      </tr>
                      <tr>
                        <td>ft_username: FTP Username</td>
                      </tr>
                      <tr>
                        <td>ft_password: FTP Password</td>
                      </tr>
                      <tr>
                        <td>ft_dirname: FTP Directory</td>
                      </tr>
                      <tr>
                        <td>ft_mode: FTP Mode Port (0) or Passive (1)</td>
                      </tr>
                      <tr>
                        <th>Return</th>
                        <td>Success, Error</td>
                      </tr>
                      <tr>
                        <th>Example</th>
                        <td><code>http://admin:instar@192.168.178.88/cgi-bin/hi3510/param.cgi?cmd=setftpattr&-ft_server=220.112.14.173&-ft_port=21&amp;-ft_username=FTPUsername&amp;-ft_password=FTPPassword&amp;-ft_dirname=ProgramFiles&amp;-ft_mode=1</code></td>
                      </tr>
                    </table>
                  </div>

